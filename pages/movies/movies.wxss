/* pages/movies/movies.wxss */
page{
  background: #f4f4f4;
}
.search{
  padding: 15px;
}
.search-content{
  padding: 15rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.list-title{
  font-size: 20px;
  font-weight: bold;
  padding-left: 15px;
}
.flex-wrp{
  display: flex;
  /*flex-wrap: wrap;*/
  flex-flow: row wrap;
  align-content: flex-start;
}
.flex-item{
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  flex: 0 0 40%;
  display: flex;
  flex-direction: column;
  margin: 0 5% 5% 5%;
  padding: 10rpx;
}
.flex-item image{
  width: 100%;
}
.movie-title{
  font-weight: bold;
  font-size: 16px;
}